<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintAgregar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/tvLista"
        android:layout_width="255dp"
        android:layout_height="202dp"
        android:gravity="center"
        android:text="Tarea"
        app:layout_constraintBottom_toTopOf="@+id/btnAgregarTarea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTarea"
        app:layout_constraintVertical_bias="0.53" />

    <EditText
        android:id="@+id/editTextTarea"
        android:layout_width="232dp"
        android:layout_height="80dp"
        android:layout_marginTop="116dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Ingrese Tarea"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAgregarTarea"
        android:layout_width="160dp"
        android:layout_height="67dp"
        android:layout_marginTop="372dp"
        android:text="Agregar Tarea"
        app:layout_constraintEnd_toEndOf="@+id/editTextTarea"
        app:layout_constraintStart_toStartOf="@+id/editTextTarea"
        app:layout_constraintTop_toBottomOf="@+id/editTextTarea" />

</androidx.constraintlayout.widget.ConstraintLayout>